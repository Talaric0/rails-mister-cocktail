
<div class="container">
  <h1>New cocktail</h1>
  <%= simple_form_for @cocktail do |f| %>
    <%= f.input :name, placeholder: "Cocktail's name" %>
    <%= f.input :photo, as: :file, label: "Upload a photo:" %>
    <%= f.button :submit, class: "btn btn-outline-primary" %>
  <% end %>
  <%= link_to 'Back', root_path, class: "btn btn-outline-secondary" %>
</div>