
<div class="container">
  <h1>Cocktails</h1>
  
  <h2><%= @cocktail.name %></h2>
  <br>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Dose description</th>
        <th scope="col">Ingredient</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @cocktail.doses.each do |dose| %>
      <tr>
        <td><%= dose.description %></td>
        <td><%= dose.ingredient.name %></td>
        <td><%= link_to '❌', dose_path(dose.id), method: :delete, data: { confirm: 'Are you certain you want to delete this dose?'} %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  
  <%= link_to 'Add dose', new_cocktail_dose_path(@cocktail), :class => "btn btn-primary" %>
  
  <%= link_to 'Back', root_path, class: "btn btn-outline-secondary" %>

</div>
