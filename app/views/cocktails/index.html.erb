<div class="container">
  <div class="container text-center">
    <h1>Cocktails</h1>
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <%= link_to cocktail_path(cocktail.id) do %>
        <div class="card m-2" style="width: 12rem;">
          <% if cocktail.photo.attached? %>
          <%= cl_image_tag cocktail.photo.key, width: 200, height: 200, :effect=>"sharpen", :gravity=>"auto", crop: :fill, class: "card-img-top"  %>
          <% end %>
          <%= link_to cocktail_path(cocktail.id) do %>
          <div class="card-body">
            <p class="card-text text-center"> <%= cocktail.name %></p>
          </div>
          <% end %>
        </div>
        <% end %>
      <% end %>
    </div>
    <%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-outline-secondary" %>
  </div>
</div>