<div class="container">
  <div class="container">
    <h1>Cocktails</h1>
    <div class="row">
      <% @cocktails.each do |cocktail| %>
      <div class="card m-3" style="width: 18rem;">
        <% if cocktail.photo.attached? %>
        <%= cl_image_tag cocktail.photo.key, width: 300, crop: :fill, class: "card-img-top"  %>
        <% end %>
        <div class="card-body">
          <p class="card-text"> <%= link_to cocktail.name, cocktail_path(cocktail.id) %>  <br> Some quick example text to build on the card title...
          </p>
        </div>
      </div>
      <% end %>
    </div>
    <%= link_to "Add new", new_cocktail_path, class: "btn btn-outline-secondary" %>
  </div>
</div>