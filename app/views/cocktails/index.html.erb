<div class="container">
  <h1>Cocktails</h1>
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
      <div class="card m-3" style="width: 18rem;">
        <img src="<%= cocktail.image_url %>" class="card-img-top" alt="...">
        <div class="card-body">
          <p class="card-text"> <%= link_to cocktail.name, cocktail_path(cocktail.id) %>  <br> Some quick example text to build on the card title...
          </p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>