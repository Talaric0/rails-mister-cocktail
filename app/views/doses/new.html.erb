<div class="container">
  <h1>Doses</h1>
  
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.association :ingredient, collection: Ingredient.order('name ASC') %>
    <%= f.input :description, placeholder: "How much?", label: "Quantity" %>
    <%= f.button :submit, :class => "btn btn-primary" %>
  <% end %>
  <%= link_to 'Back', cocktail_path(@cocktail), class: "btn btn-outline-secondary" %>
</div>


